<Window x:Class="ProjektSemestralnyBiblioteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Okno Główne" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Nagłówek okna -->
        <TextBlock Text="Okno Główne" FontSize="18" HorizontalAlignment="Center" Margin="0 20 0 10" />

        <!-- Przyciski nawigacji -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
            <Button Content="Przeglądaj Książki" Click="PrzegladajKsiazki_Click" Width="150" Margin="10" />
            <Button Content="Dodaj Czytelnika" Click="DodajCzytelnika_Click" Width="150" Margin="10" />
            <Button Content="Wypożyczenia" Click="Wypozyczenia_Click" Width="150" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
